.flash-box
.sidebar
  .sidebar__header
    = current_user.name
    = link_to edit_user_path(current_user) do
      = fa_icon "cog", class:"sidebar__header__btn"
    = link_to '#' do
      = fa_icon "edit", class:"sidebar__header__btn"
  .sidebar__body
    .group
      = link_to 'hogehoge', '#'
    .group
      = link_to '#' do
        %h2 title
        %p first_message
    .group
      = link_to '#' do
        %h2 title
        %p first_message

.chat-space
  .chat-space__header
    %h2 name
    %p Member
    .chat-space__header__btn
      = link_to "Edit", '#'
  .chat-space__body
    .message
      .message__header
        %span.user-name user
        %span.post-time time
      .message__text
        %p text
    .message
      .message__header
        %span.user-name user
        %span.post-time 2019/08/04(Sat) 18:58:30
      .message__text
        %p text
  .chat-space__form
    .chat-space__form__input-box
      type a message
      %label.chat-space__form__btn--image(for="file")
        = fa_icon "image"
        %input.hidden#file{type: "file"}
    .chat-space__form__btn
      = link_to "Send", '#'